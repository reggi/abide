{
  "name": "@reggi/stdio",
  "version": "1.0.0",
  "author": "Thomas Reggi",
  "main": "./index.build.js",
  "scripts": {
    "babel": "babel ./index.js --out-file ./index.build.js",
    "babel:watch": "npm run babel -- --watch",
    "standard": "standard",
    "coverage": "nyc npm run test",
    "test": "NODE_ENV=test babel-node ./index.test.js",
    "test:result": "npm run test --silent &>/dev/null || echo $?"
  },
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    },
    "plugins": [
      "transform-object-rest-spread"
    ],
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "4"
          }
        }
      ]
    ]
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "reporter": [
      "json",
      "lcov",
      "html",
      "text"
    ],
    "check-coverage": true,
    "per-file": false,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "sourceMap": false,
    "instrument": false,
    "all": true
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "standard": "^11.0.0",
    "babel-plugin-istanbul": "^4.1.5",
    "nyc": "^11.6.0",
    "babel-register": "^6.26.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "standard": {
    "globals": [
      "expect",
      "test",
      "beforeEach",
      "afterEach"
    ]
  }
}
